@model IEnumerable<ProjetoDimDim.Models.Projeto>

@{
    ViewData["Title"] = "Index";
}

<h1>Página Principal</h1>

<p>
    <a asp-action="Create">Criar novo projeto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dificuldade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dificuldade)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProjetoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ProjetoId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.ProjetoId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
